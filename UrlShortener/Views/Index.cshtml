@model UrlShortener.Models.ShortUrlRequest

@{
    ViewData["Title"] = "Encurtador URL";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4 rounded-4">
        <h2 class="text-center mb-4">🔗 Encurtador de URL</h2>

        <form asp-action="Shorten" method="post">
            <div class="mb-3">
                <label for="Url" class="form-label">Cole a URL longa:</label>
                <input asp-for="Url" class="form-control form-control-lg rounded-3" placeholder="https://exemplo.com" />
                <span asp-validation-for="Url" class="text-danger"></span>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary btn-lg px-5 rounded-pill">Encurtar</button>
            </div>
        </form>

        @if (ViewBag.ShortUrl != null)
        {
            <div class="alert alert-success mt-4 text-center rounded-3 shadow-sm">
                <strong>URL encurtada:</strong> <br />
                <a href="@ViewBag.ShortUrl" target="_blank" class="text-decoration-none">@ViewBag.ShortUrl</a><br />
                <small class="text-muted">⏳ Válida até: @ViewBag.ExpirationDate</small>
            </div>
        }
    </div>
</div>

@section Scripts
